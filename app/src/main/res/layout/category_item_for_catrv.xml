<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/imageViewforCategoryRV"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_margin="4dp"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView2forAdapterCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:fontFamily="@font/myfont"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewforCategoryRV"
        app:layout_constraintStart_toStartOf="@+id/imageViewforCategoryRV"
        app:layout_constraintTop_toBottomOf="@+id/imageViewforCategoryRV" />
</androidx.constraintlayout.widget.ConstraintLayout>